@Library('monthly_task_library') _

pipeline {
    agent any
    environment {
        MONTHLY_DAY = '27'
    }
    stages {
        // Runs FIRST before anything can fail
        // so the monthly reset check always executes
        stage('Check Monthly Reset') {
            steps {
                script {
                    monthlyPipeline2.resetMonthlyFlagIfNewMonth(this)
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Running Build...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running Tests...'
                //error 'Simulated failure'
            }
        }
        stage('Package') {
            steps {
                echo 'Packaging artefacts...'
            }
        }
        stage('Monthly Task') {
            when {
                expression {
                    return monthlyPipeline2.isMonthlyTaskDue(this)
                }
            }
            steps {
                echo 'Running monthly task (sending artifacts to S3)...'
                // sh 'aws s3 sync ./dist s3://your-bucket/artifacts'
            }
        }
    }
    post {
        success {
            script {
                monthlyPipeline2.clearAll(this)
            }
        }
        failure {
            script {
                monthlyPipeline2.handleFailure(this)
            }
        }
        always {
            echo "Build finished with: ${currentBuild.currentResult}"
        }
    }
}
