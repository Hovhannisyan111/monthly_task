@Library('monthly_task_library') _

pipeline {
    agent any
    environment {
        MONTHLY_DAY = '26'
    }
    stages {
        stage('Build') {
            steps {
                echo 'Running Build...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running Tests...'
            }
        }
        stage('Package') {
            steps {
                echo 'Packaging artefacts...'
            }
        }
        stage('Check Monthly Reset') {
            steps {
                script {
                    // Must be here in a real step â€” cannot be inside when { expression }
                    monthlyPipeline.resetMonthlyFlagIfNewMonth(this)
                }
            }
        }
        stage('Monthly Task') {
            when {
                expression {
                    return monthlyPipeline.isMonthlyTaskDue(this)
                }
            }
            steps {
                echo 'Running monthly task (sending artifacts to S3)...'
                // sh 'aws s3 sync ./dist s3://your-bucket/artifacts'
            }
        }
    }
    post {
        success {
            script {
                monthlyPipeline.clearAll(this)
            }
        }
        failure {
            script {
                monthlyPipeline.handleFailure(this)
            }
        }
        always {
            echo "Build finished with: ${currentBuild.currentResult}"
        }
    }
}
